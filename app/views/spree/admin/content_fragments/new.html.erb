<%= render partial: 'spree/admin/shared/product_tabs', locals: { current: :content_fragments } %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @product } %>

<% content_for :page_title do %>
  <%= Spree.t(:new_content_fragment) %>
<% end %>

<%= form_for [:admin, @product, @content_fragment], html: { multipart: true } do |f| %>
  <fieldset data-hook="new_content_fragment">
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t('actions.create'), 'save' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), spree.admin_product_content_fragments_url(@product), icon: 'delete', id: 'cancel_link' %>
    </div>
  </fieldset>
<% end %>
